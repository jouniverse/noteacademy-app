<html>
<head>
  {{> header}}
</head>
<body>
  <h1 class="page-title">Noteacademy</h1>
  <div class="container">
    {{> menu}}

    <h2 class="pt-4 pb-2">Edit Note</h2>

    <form action='/users/update-article' method="POST">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" value="{{title}}" class="form-control" placeholder="Enter title">
      </div>
      <div class="form-group">
        <label for="description">Body</label>
        <textarea name="description" class="form-control">{{body}}</textarea>
      </div>
      <input type="hidden" name="articleId" value="{{articleid}}" />
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  {{> footer}}
</body>
</html>
